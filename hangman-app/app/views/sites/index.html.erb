<h1>Hangman</h1>

<div class="row">
  <div class="col-sm-6">

    <svg height="500" width="500">
      <polyline points="400,
                        500 100,
                        500 150,
                        500 150,
                        100 320,
                        100 320,
                        150"
      style="fill:none;stroke:black;stroke-width:10" />
    </svg>

  </div>
   <div class="col-sm-6">

    <div ng-controller="HangmanCtrl">
      <form ng-submit="handleSubmit(word)" role="form">
          <div class="form-group">
              <input class="form-control" ng-model="word" placeholder="Enter a word">
          </div>

          <button type="submit" class="btn btn-default">Save</button>
      </form>

      <h3>Take a guess!</h3>
      <div ng-repeat="letter in letters">
        <button class="btn btn-default letter-button" id="letter{{}}">{{letter}}</button>
      </div>

    </div>


  </div>
</div>
